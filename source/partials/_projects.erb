<section class="ui cards centered"  id="projects">
  <% data.local_data.projects.each do |project, attrs| %>
    <div class="card">
      <div class="content">
        <div class="header"><%= attrs.name %></div>
      </div>
      <div class="image">
        <img src="<%= attrs.screenshot %>">
      </div>
      <div class="content">
        <% if !attrs.tags.empty? %>
          <div class="meta">
            <% attrs.tags.each do |tag| %>
              <div class="ui label mini"><%= tag %></div>
            <% end %>
          </div>
        <% end %>
        <div class="description">
          <%= attrs.description %>
        </div>
      </div>
      <div class="extra content">
        <span class="right floated"><%= attrs.extra %></span>
        <span>
          <a href="<%= attrs.github %>"><i class="fa fa-code"> code</i></a>
        </span>
      </div>
    </div>
  <% end %>
</section>
