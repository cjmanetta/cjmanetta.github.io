<nav class="ui secondary pointing menu">
  <div class="right menu">
    <% current_page.data.pages.each do |page| %>
      <% page.each do |label, url| %>
        <% if current_page.path == url %>
          <a class="item active nav-link" href="<%= url %>"><%= label %></a>
        <% else %>
          <a class="item nav-link" href="<%= url %>"><%= label %></a>
        <% end %>
      <% end %>
    <% end %>
  </div>
</nav>